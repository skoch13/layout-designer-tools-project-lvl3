- const current = 'chat'
include sections/right-chat
doctype html
html(lang='ru')
  include sections/head
  body.vh-100.p-md-4
    div.container-xxl.h-100.overflow-hidden.radius-left-sm.radius-right-bottom-sm
      div.row.h-100
        div.col-md-4.border-end-sm.px-0.menu.d-flex.flex-column.h-100
          include sections/header
          div.chat.overflow-auto.tab-content.mb-auto
            div.tab-pane(id='contacts' role='tabpanel' aria-labelledby='contact-pill')
              include sections/contacts
            div.tab-pane.active(id='chats' role='tabpanel' aria-labelledby='chats-pill')
              include sections/messages
            div.tab-pane(id='profile' role='tabpanel' aria-labelledby='profile-pill')
              include sections/profile
            div.tab-pane(id='current-chat-pill' role='tabpanel' aria-labelledby='current-pill' class='h-100 d-sm-none')
              +right-chat(class='d-flex flex-column d-md-none')
        div.col-md-8.d-none.d-sm-flex.flex-sm-column.px-0.align-items-start.h-100
          +right-chat(class='d-none d-md-flex flex-column')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p' crossorigin='anonymous')
