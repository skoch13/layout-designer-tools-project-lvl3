include avatar
mixin message(name, message, timestamp, avatar)
  div.mt-2.mb-2.d-flex.gap-2.shadow-sm.justify-content-start.flex-grow-0.flex-shrink-1
    div.align-self-center.ms-2
      +avatar(avatar)
    div.my-4.align-self-center.flex-grow-0.flex-shrink-1
      p.h6.fw-bold= name
      div.status.pb-0.fw-light.small
        span.d-block.text-truncate.message= message
    div.my-4.ms-auto.me-4.align-self-start
      div.status.small.fw-light= timestamp
