include avatar
mixin message(name, message, timestamp, avatar)
  - const href = name == 'Вениамин Редакторович' ? 'chat.html' : '#'

  a.text-decoration-none.text-black(href= href)
    div.mb-3.d-flex.shadow-sm.justify-content-start.card-component.text-truncate.ps-3.py-3.pe-4
      div.align-self-center
        +avatar(avatar)
      div.ms-4.align-self-center.message.d-flex.flex-column.flex-grow-1
        div.d-inline-flex.justify-content-between
          p.fw-bold.mb-0.me-1= name
          p.status.small.fw-light.opacity-50.mb-0.ms-auto.me-3= timestamp
        div.status.pb-0.fw-light.text-truncate.m-0
          small= message
