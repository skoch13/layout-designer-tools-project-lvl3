doctype html
html(lang='ru')
  include sections/head
  body
    div.container.vh-100.overflow-hidden.radius-0.radius-sm
      div.row
        div.col-lg-5.col-sm-4.border-end.px-0.menu.d-flex.flex-column.vh-100
          include sections/header
          #myTabContent.pt-5.px-4.chat.overflow-auto.tab-content.mb-auto
            div.tab-pane.active(id='contacts' role='tabpanel' aria-labelledby='contact-pill')
              include sections/contacts
            div.tab-pane(id='chats' role='tabpanel' aria-labelledby='chats-pill')
              include sections/messages
            div.tab-pane(id='profile' role='tabpanel' aria-labelledby='profile-pill')
              include sections/profile
        div.col.align-self-center.d-none.d-sm-block
          include sections/right

script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js' integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM' crossorigin='anonymous')
