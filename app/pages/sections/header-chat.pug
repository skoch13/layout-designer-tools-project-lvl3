  const user = {
    name: "Вениамин Редакторович",
    status: "Онлайн",
    avatar: "/images/avatar_4.jpg"
  }

include ../components/avatar

div.d-flex.card-component.position-sticky.text-decoration-none.border-bottom.align-self-start.w-100
  div.mx-2.my-3
    +avatar(user.avatar)(class='mb-1')
