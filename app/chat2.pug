doctype html
html(lang="ru")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Мессенджер «Hexlet Chat»
        link(rel="stylesheet", href="./css/app.css")
    body.bg-gray.d-flex.justify-content-center.align-items-stretch.min-vh.overflow-hidden.container-xxl.p-0
        #left-section.m-0.ms-sm-4.my-sm-4.bg-white.overflow-auto.hide-scroll
            .main-nav.bg-primary.w-100.ps-3.pe-3.d-flex.justify-content-between.sticky-top.align-items-center.radius-left-top
                img(src="./images/icons/logo.svg", alt="logo", class="chat-logo ms-1 mt-4 mb-4", style="height: 24px;")
                nav
                    .nav.nav-tabs(id="nav-tab" role="tablist")
                        button.nav-link.link-light.hide-n-seek(id="current-chat-tab" data-bs-toggle="tab" data-bs-target="#current-chat" type="button" role="tab" aria-controls="current-chat" aria-selected="true")
                            img(src="./images/icons/chat-left-text.svg", alt="")
                        button.nav-link.link-light(id="contacts-tab" data-bs-toggle="tab" data-bs-target="#contacts" type="button" role="tab" aria-controls="contacts" aria-selected="true")
                            img.nav-icon(src="./images/icons/people.svg", alt="")
                            span.small.ms-2 Контакты
                        button.nav-link.active.link-light(id="chats-tab" data-bs-toggle="tab" data-bs-target="#chats" type="button" role="tab" aria-controls="chats" aria-selected="false")
                            img.nav-icon(src="./images/icons/chat.svg", alt="")
                            span.small.ms-2 Сообщение
                        button.nav-link.link-light(id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false")
                            img.nav-icon(src="./images/icons/person.svg", alt="")
                            span.small.ms-2 Профиль
            .tab-content.flex-shrink-1.flex-grow-1(id="nav-tabContent")
                .tab-pane.fade.ps-4.pe-4(id="contacts" role="tabpanel" aria-labelledby="contacts-tab") 
                    include pug/contact.pug
                .tab-pane.fade.show.active.ps-4.pe-4(id="chats" role="tabpanel" aria-labelledby="chats-tab")
                    include pug/chats.pug
                .tab-pane.fade.ps-4.pe-4(id="profile" role="tabpanel" aria-labelledby="profile-tab")
                    include pug/profile.pug
                .tab-pane.fade.hide-n-seek(id="current-chat" role="tabpanel" aria-labelledby="current-chat-tab")
                    include pug/current-chat.pug
        #right-section.m-0.me-sm-4.my-sm-4.bg-white.border-0.border-start.overflow-auto.hide-scroll
            include pug/current-chat.pug
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous") 


        